@model WebHamburgueria.Models.Produto

@{
    ViewBag.Title = "Excluir Produto - ";
}

<section class="d-flex align-items-center" style="padding-bottom: 1em;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-lg" style="border-radius: 1rem;">
                    <!-- Cabeçalho -->
                    <div class="card-header bg-danger text-white text-center" style="border-top-left-radius: 1rem; border-top-right-radius: 1rem;">
                        <h3 class="card-title mb-0">Confirmação de Exclusão</h3>
                    </div>
                    <!-- Corpo do Card -->
                    <div class="card-body">
                        <p class="text-center fw-bold">Tem certeza que deseja excluir este produto?</p>
                        <hr />
                        <div class="mb-3">
                            <strong>@Html.DisplayNameFor(model => model.Id):</strong>
                            <p>@Html.DisplayFor(model => model.Id)</p>
                        </div>
                        <div class="mb-3">
                            <strong>@Html.DisplayNameFor(model => model.Nome):</strong>
                            <p>@Html.DisplayFor(model => model.Nome)</p>
                        </div>
                        <div class="mb-3">
                            <strong>@Html.DisplayNameFor(model => model.Preco):</strong>
                            <p>@Html.DisplayFor(model => model.Preco)</p>
                        </div>
                        <div class="mb-3">
                            <strong>@Html.DisplayNameFor(model => model.Descricao):</strong>
                            <p>@Html.DisplayFor(model => model.Descricao)</p>
                        </div>
                        <div class="mb-3">
                            <strong>@Html.DisplayNameFor(model => model.Ingredientes):</strong>
                            <p>@Html.DisplayFor(model => model.Ingredientes)</p>
                        </div>
                        <div class="mb-3">
                            @if (Model.Foto != null && Model.Foto.Length > 0)
                            {
                                var base64 = Convert.ToBase64String(Model.Foto);
                                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                                <img src="@imgSrc" class="img-fluid rounded" style="max-width: 300px; max-height: 200px;" />
                            }
                            else
                            {
                                <p>Sem Imagem</p>
                            }
                        </div>
                        <div class="mb-3">
                            <strong>@Html.DisplayNameFor(model => model.Tipo):</strong>
                            <p>@(Model.Tipo == "L" ? "Lanche" : Model.Tipo == "B" ? "Bebida" : Model.Tipo == "A" ? "Acompanhamento" : "Tipo Inválido")</p>
                        </div>
                    </div>
                    <!-- Rodapé com Botões -->
                    <div class="card-footer text-center">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger me-2">Excluir</button>
                            @Html.ActionLink("Voltar para Lista", "Index", null, new { @class = "btn btn-secondary" })
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
