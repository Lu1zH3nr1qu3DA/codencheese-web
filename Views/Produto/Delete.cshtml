@model WebHamburgueria.Models.Produto

@{
    ViewBag.Title = "Excluir Produto";
}

<section class="vh-100 d-flex align-items-center" style="background: url('https://cdn.pixabay.com/photo/2016/11/29/10/07/brick-1869718_1280.jpg') no-repeat center center; background-size: cover; min-height: 130vh;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-lg" style="border-radius: 1rem; background-color: rgba(255,255,255,0.95);">
                    <!-- Cabeçalho -->
                    <div class="card-header bg-danger text-white text-center">
                        <h3 class="card-title mb-0">Confirmação de Exclusão</h3>
                    </div>
                    <!-- Corpo do Card -->
                    <div class="card-body">
                        <p class="text-center fw-bold">Tem certeza que deseja excluir este produto?</p>
                        <hr />
                        <div class="mb-3">
                            <strong>@Html.DisplayNameFor(model => model.Nome):</strong>
                            <p>@Html.DisplayFor(model => model.Nome)</p>
                        </div>
                        <div class="mb-3">
                            <strong>@Html.DisplayNameFor(model => model.Preco):</strong>
                            <p>@Html.DisplayFor(model => model.Preco)</p>
                        </div>
                        <div class="mb-3">
                            <strong>@Html.DisplayNameFor(model => model.Descricao):</strong>
                            <p>@Html.DisplayFor(model => model.Descricao)</p>
                        </div>
                        <div class="mb-3">
                            <strong>@Html.DisplayNameFor(model => model.Ingredientes):</strong>
                            <p>@Html.DisplayFor(model => model.Ingredientes)</p>
                        </div>
                        <div class="mb-3">
                            <strong>@Html.DisplayNameFor(model => model.Tipo):</strong>
                            <p>@Html.DisplayFor(model => model.Tipo)</p>
                        </div>
                        <div class="mb-3">
                            @if (Model.Foto != null && Model.Foto.Length > 0)
                            {
                                var base64 = Convert.ToBase64String(Model.Foto);
                                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                                <img src="@imgSrc" class="img-fluid rounded" style="max-width: 300px; max-height: 200px;" />
                            }
                            else
                            {
                                <p>Sem Imagem</p>
                            }
                        </div>
                    </div>
                    <!-- Rodapé com Botões -->
                    <div class="card-footer text-center">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-danger me-2">Excluir</button>
                            @Html.ActionLink("Voltar para Lista", "Index", null, new { @class = "btn btn-outline-secondary" })
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
