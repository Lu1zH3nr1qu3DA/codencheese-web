@model WebHamburgueria.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login - Code & C#eese Web";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootswatch/morph/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="d-flex flex-column min-vh-100" @*data-bs-theme="dark"*@>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <section>
            <div class="container d-flex align-items-center justify-content-center" style="padding-top: 4em; padding-bottom: 1em;">
                <div class="card p-4 shadow" style="max-width: 400px; border: none; border-radius: 1rem;">
                    <div class="card-body">
                        <h3 class="card-title text-center mb-4">Admin Login</h3>
                        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                        {
                            <div class="mb-3">
                                @Html.LabelFor(model => model.Login, new { @class = "form-label" })
                                @Html.TextBoxFor(model => model.Login, new { @class = "form-control", placeholder = "Digite seu login" })
                                @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-3">
                                @Html.LabelFor(model => model.Password, new { @class = "form-label" })
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Digite sua senha" })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-outline-primary">Entrar</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </section>
        <footer class="mt-auto bg-light text-dark" style="min-height: 5em;">
            <div class="container">
                <div class="row">
                    <!-- Créditos e Direitos -->
                    <div class="col-md-6 mb-3 mb-md-0">
                        <br />
                        <p class="mb-1">
                            Feito por
                            <a href="https://github.com/Lu1zH3nr1qu3DA" target="_blank" class="text-decoration-underline">Luiz H. D. Alecrim</a>
                            e
                            <a href="https://www.instagram.com/ricksf3?igsh=ZHlwdWdkYTExeGgx" target="_blank" class="text-decoration-underline">Henrique de Souza Fontes</a>.
                        </p>
                        <p class="mb-0">&copy; @DateTime.Now.Year. Todos os direitos reservados.</p>
                        <br />
                    </div>
                    <!-- Ícones de Redes Sociais (opcional) -->
                    <!--<div class="col-md-6 text-center text-md-end">
                        <a href="#" class="text-white me-3">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="text-white me-3">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="text-white me-3">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a href="#" class="text-white">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                    </div>-->
                </div>
            </div>
        </footer>
    }
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/jquery")
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    }
</body>
</html>