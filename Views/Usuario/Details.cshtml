@model WebHamburgueria.Models.Usuario

@{
    ViewBag.Title = "Detalhes do Usuário";
}

<section style="padding-bottom: 1em;">
    <div class="container d-flex justify-content-center align-items-center">
        <div class="card shadow-lg" style="width: 650px; border-radius: 1rem;">

            <!-- Cabeçalho do Card -->
            <div class="card-header bg-primary text-white text-center" style="border-top-left-radius: 1rem; border-top-right-radius: 1rem;">
                <h3 class="card-title mb-0">Detalhes do Usuário</h3>
            </div>

            <!-- Corpo do Card -->
            <div class="card-body p-5">
                <div class="mb-3">
                    <strong>@Html.DisplayNameFor(model => model.Id): </strong>
                    <span>@Html.DisplayFor(model => model.Id)</span>
                </div>
                <div class="mb-3">
                    <strong>@Html.DisplayNameFor(model => model.NomeCompleto): </strong>
                    <span>@Html.DisplayFor(model => model.NomeCompleto)</span>
                </div>
                <div class="mb-3">
                    <strong>@Html.DisplayNameFor(model => model.NomeUsuario): </strong>
                    <span>@Html.DisplayFor(model => model.NomeUsuario)</span>
                </div>
                <div class="mb-3">
                    <strong>@Html.DisplayNameFor(model => model.Cpf): </strong>
                    <span>@Html.DisplayFor(model => model.Cpf)</span>
                </div>
                <div class="mb-3">
                    <strong>@Html.DisplayNameFor(model => model.Email): </strong>
                    <span>@Html.DisplayFor(model => model.Email)</span>
                </div>
                <div class="mb-3">
                    <strong>@Html.DisplayNameFor(model => model.Telefone): </strong>
                    <span>@Html.DisplayFor(model => model.Telefone)</span>
                </div>
                <div class="mb-3">
                    <strong>@Html.DisplayNameFor(model => model.Nascimento): </strong>
                    <span>@Html.DisplayFor(model => model.Nascimento)</span>
                </div>
                <div class="mb-3">
                    <strong>@Html.DisplayNameFor(model => model.Genero): </strong>
                    <span>@Html.DisplayFor(model => model.Genero)</span>
                </div>
                <div class="mb-3">
                    <strong>@Html.DisplayNameFor(model => model.Endereco): </strong>
                    <span>@Html.DisplayFor(model => model.Endereco)</span>
                </div>
                <div class="mb-3">
                    <strong>@Html.DisplayNameFor(model => model.Pontos): </strong>
                    <span>@Html.DisplayFor(model => model.Pontos)</span>
                </div>
            </div>

            <!-- Rodapé do Card -->
            <div class="card-footer text-center">
                <a href="@Url.Action("Delete", "Usuario", new { id = Model.Id })" class="btn btn-primary me-2">Excluir</a>
                <a href="@Url.Action("Edit", "Usuario", new { id = Model.Id })" class="btn btn-primary me-2">Editar</a>
                <a href="@Url.Action("Index", "Usuario")" class="btn btn-secondary">Voltar para Lista</a>
            </div>
        </div>
    </div>
</section>
