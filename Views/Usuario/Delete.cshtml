@model WebHamburgueria.Models.Usuario

@{
    ViewBag.Title = "Excluir Usuário - ";
}

<section class="d-flex align-items-center" style="padding-bottom: 1em;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-lg" style="border-radius: 1rem;">
                    <!-- Cabeçalho -->
                    <div class="card-header bg-danger text-white text-center" style="border-top-left-radius: 1rem; border-top-right-radius: 1rem;">
                        <h3 class="card-title mb-0">Confirmação de Exclusão</h3>
                    </div>
                    <!-- Corpo do Card -->
                    <div class="card-body">
                        <p class="text-center fw-bold">Tem certeza que deseja excluir este usuário?</p>
                        <hr />
                        <div class="mb-3">
                            <strong>@Html.DisplayNameFor(model => model.Id):</strong>
                            <p>@Html.DisplayFor(model => model.Id)</p>
                        </div>
                        <div class="mb-3">
                            <strong>@Html.DisplayNameFor(model => model.NomeCompleto):</strong>
                            <p>@Html.DisplayFor(model => model.NomeCompleto)</p>
                        </div>
                        <div class="mb-3">
                            <strong>@Html.DisplayNameFor(model => model.NomeUsuario):</strong>
                            <p>@Html.DisplayFor(model => model.NomeUsuario)</p>
                        </div>
                        <div class="mb-3">
                            <strong>@Html.DisplayNameFor(model => model.Cpf):</strong>
                            <p>@Html.DisplayFor(model => model.Cpf)</p>
                        </div>
                        <div class="mb-3">
                            <strong>@Html.DisplayNameFor(model => model.Email):</strong>
                            <p>@Html.DisplayFor(model => model.Email)</p>
                        </div>
                        <div class="mb-3">
                            <strong>@Html.DisplayNameFor(model => model.Telefone):</strong>
                            <p>@Html.DisplayFor(model => model.Telefone)</p>
                        </div>
                        <div class="mb-3">
                            <strong>@Html.DisplayNameFor(model => model.Nascimento):</strong>
                            <p>@Html.DisplayFor(model => model.Nascimento)</p>
                        </div>
                        <div class="mb-3">
                            <strong>@Html.DisplayNameFor(model => model.Genero):</strong>
                            <p>@(Model.Genero == "M" ? "Masculino" : Model.Genero == "F" ? "Feminino" : Model.Genero == "O" ? "Outro" : "Tipo Inválido")</p>
                        </div>
                        <div class="mb-3">
                            <strong>@Html.DisplayNameFor(model => model.Endereco):</strong>
                            <p>@Html.DisplayFor(model => model.Endereco)</p>
                        </div>
                        <div class="mb-3">
                            <strong>@Html.DisplayNameFor(model => model.Pontos):</strong>
                            <p>@Html.DisplayFor(model => model.Pontos)</p>
                        </div>
                    </div>
                    <!-- Rodapé com Botões -->
                    <div class="card-footer text-center">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger me-2">Excluir</button>
                            @Html.ActionLink("Voltar para Lista", "Index", null, new { @class = "btn btn-secondary" })
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
