    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Função para definir o tema e armazenar a escolha
            function setTheme(theme) {
                // Define o atributo no elemento raiz (pode ser <html> ou <body>)
                document.documentElement.setAttribute('data-bs-theme', theme);
                localStorage.setItem('theme', theme);
            }

            // Se já houver uma preferência salva, use-a
            const storedTheme = localStorage.getItem('theme');
            if (storedTheme) {
                setTheme(storedTheme);
            } else {
                // Se não, detecta a preferência do sistema
                const prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
                setTheme(prefersDark ? 'dark' : 'light');
            }

            // Adiciona listeners aos botões do dropdown
            document.querySelectorAll('[data-bs-theme-value]').forEach(function (button) {
                button.addEventListener('click', function () {
                    const theme = this.getAttribute('data-bs-theme-value');
                    setTheme(theme);

                    // Atualiza os atributos aria-pressed nos botões
                    document.querySelectorAll('[data-bs-theme-value]').forEach(function (btn) {
                        btn.setAttribute('aria-pressed', btn.getAttribute('data-bs-theme-value') === theme ? 'true' : 'false');
                    });
                });
            });
        });
    </script>

