@{
    ViewBag.Title = "Sobre Nós";
}

<!-- Hero Section com fundo impactante -->
<section class="d-flex align-items-center" style="padding-bottom: 1em">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <h1 class="display-4 fw-bold">Sobre o Projeto</h1>
                <br />
                <p class="lead">Este projeto é um sistema web de administração de pedidos para uma hamburgueria, permitindo gerenciar produtos, pedidos, usuários e relatórios de forma integrada e moderna.</p>
                <a href="https://github.com/SenacPPR-TI51GrupoWebLuiz-Henrique/WebHamburgueria" target="_blank" class="btn btn-light btn-lg mt-3 github-icon"><i class="bi bi-github"></i> WebHamburgueria </a>
            </div>
        </div>
    </div>
</section>

<!-- Seção Informativa com Cartões -->
<section class="py-5 bg-body">
    <div class="container">
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card h-100 border-0 shadow">
                    <div class="card-body">
                        <h5 class="card-title">Escopo</h5>
                        <p class="card-text">O sistema abrange o cadastro, edição e exclusão de produtos, gerenciamento de pedidos e usuários.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 border-0 shadow">
                    <div class="card-body">
                        <h5 class="card-title">Público-Alvo</h5>
                        <p class="card-text">Gerentes de loja, atendentes de balcão e administradores que necessitam de controle e visualização em tempo real dos pedidos.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 border-0 shadow">
                    <div class="card-body">
                        <h5 class="card-title">Nossos Valores</h5>
                        <p class="card-text">Valorizamos a inovação, transparência e qualidade, mantendo sempre um relacionamento próximo com nossos clientes.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 border-0 shadow">
                    <div class="card-body">
                        <h5 class="card-title">Tecnologias Utilizadas</h5>
                        <p class="card-text">
                            <ul>
                                <li>ASP.NET MVC 5</li>
                                <li>Entity Framework</li>
                                <li>SQL Server</li>
                                <li>Bootstrap 5.3 (tema Morph)</li>
                                <li>jQuery 3.6</li>
                            </ul>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
