@model IEnumerable<WebHamburgueria.Models.Administrador>

@{
    ViewBag.Title = "Index";
}

<div class="container my-5" style="min-height: 20vh; ">
    <!-- Cabeçalho com título e botão "Criar Novo" -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Administradores</h2>
        @Html.ActionLink("Criar Novo", "Create", null, new { @class = "btn btn-outline-success" })
    </div>

    <!-- Card que envolve a tabela -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayName("ID")</th>
                        <th>@Html.DisplayName("Nome")</th>
                        <th>@Html.DisplayName("CPF")</th>
                        <th>@Html.DisplayName("Login")</th>
                        <th>@Html.DisplayName("Senha")</th>
                        <th style="text-align: center;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr style="height: 100px;">
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.Id)</td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.Nome)</td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.Cpf)</td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.Login)</td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.Senha)</td>
                            <td class="align-middle" style="text-align: center;">
                                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-outline-info btn-sm me-1" })
                                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-warning btn-sm me-1" })
                                @Html.ActionLink("Deletar", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger btn-sm" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
