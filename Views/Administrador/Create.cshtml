@model WebHamburgueria.Models.Administrador

@{
    ViewBag.Title = "Novo Administrador - ";
}

<!-- Seção com fundo (opcional: você pode definir uma cor ou imagem de fundo) -->
<section class="vh-100" style="min-height: 140vh">
    <div class="container h-100 d-flex justify-content-center align-items-center">
        <div class="card shadow-lg" style="width: 600px; border-radius: 1rem; background-color: rgba(255,255,255,0.9);">
            <div class="card-body p-5">
                <h3 class="card-title text-center mb-4">Novo Administrador</h3>
                @using (Html.BeginForm("Create", "Administrador", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        @Html.LabelFor(model => model.Nome, new { @class = "form-label" })
                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", placeholder = "Digite o nome do produto" } })
                        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.Cpf, new { @class = "form-label" })
                        @Html.EditorFor(model => model.Cpf, new { htmlAttributes = new { @class = "form-control", placeholder = "0,00" } })
                        @Html.ValidationMessageFor(model => model.Cpf, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.Login, new { @class = "form-label" })
                        @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control", rows = "3", placeholder = "Descreva o produto" } })
                        @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.Senha, new { @class = "form-label" })
                        @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control", rows = "2", placeholder = "Ex: Alface, Tomate, Queijo..." } })
                        @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                    </div>

                    <br />
                    <br />
                    <br />

                    <div class="d-grid gap-2">
                        <button type="submit" value="Create" class="btn btn-outline-primary btn-lg">Salvar</button>
                    </div>
                }
                <div class="mt-3 text-center">
                    @Html.ActionLink("Voltar para Lista", "Index", null, new { @class = "btn btn-outline-secondary" })
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
