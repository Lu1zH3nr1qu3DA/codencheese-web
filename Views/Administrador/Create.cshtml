@model WebHamburgueria.Models.Administrador

@{
    ViewBag.Title = "Novo Administrador - ";
}

<!-- Seção com fundo (opcional: você pode definir uma cor ou imagem de fundo) -->
<section style="padding-bottom: 1em;">
    <div class="container d-flex justify-content-center align-items-center">
        <div class="card shadow-lg" style="width: 600px; border-radius: 1rem;">
            <div class="card-body p-5">
                <h3 class="card-title text-center mb-4">Novo Administrador</h3>
                @using (Html.BeginForm("Create", "Administrador", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        @Html.LabelFor(model => model.Nome, new { @class = "form-label" })
                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", placeholder = "Digite o Nome do Administrador", maxlength = "255" } })
                        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.Cpf, new { @class = "form-label" })
                        @Html.EditorFor(model => model.Cpf, new { htmlAttributes = new { @class = "form-control", placeholder = "00000000000", maxlength = "11" } })
                        @Html.ValidationMessageFor(model => model.Cpf, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.Login, new { @class = "form-label" })
                        @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control", placeholder = "login-do-administrador", maxlength = "12" } })
                        @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.Senha, new { @class = "form-label" })
                        @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control", placeholder = "Ex: S3nh@s3gur4", maxlength = "50" } })
                        @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                    </div>
                    <br />
                    <br />
                    <br />
                    <div class="d-grid gap-2">
                        <button type="submit" value="Create" class="btn btn-primary btn-lg">Salvar</button>
                    </div>
                }
                <div class="mt-3 text-center">
                    @Html.ActionLink("Voltar para Lista", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
